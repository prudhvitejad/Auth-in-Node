            //get the values
            const email = form.email.value;
            const password = form.password.value;

            console.log(email,password);

            try{
                const res = await fetch('auth/login',{
                    method: 'POST',
                    body: JSON.stringify({email,password}),
                    headers: {'Content-Type':'application/json'}
                });
            }
